{
    "name": "mort-css",
    "homepage": "https://github.com/joereynolds/mort",
    "license": "MIT",
    "description": "Dead CSS detection",
    "keywords": [
        "dead",
        "css",
        "refactoring",
        "refactoring-tools",
        "ui",
        "frontend"
    ],
    "version": "1.5.0",
    "scripts": {
        "build": "tsc",
        "lint": "tslint -c tslint.json -p tsconfig.json",
        "test": "jest test"
    },
    "bin": {
        "mort": "./dist/src/main.js"
    },
    "engines": {
        "node": ">= 8.1.0 < 9.0.0"
    },
    "dependencies": {
        "@types/node": "^9.6.2",
        "chalk": "^2.4.0",
        "command-exists": "^1.2.6",
        "commander": "^2.15.1",
        "shelltest": "^2.0.0",
        "split-retain": "^1.0.1",
        "typescript": "^2.8.1"
    },
    "devDependencies": {
        "@types/jest": "^22.2.2",
        "jest": "^22.4.3",
        "ts-jest": "^22.4.2",
        "tslint": "^5.9.1"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
